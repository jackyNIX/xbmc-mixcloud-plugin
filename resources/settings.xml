<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>

  <!-- General -->
  <category label="30900">
    <setting id="page_limit" type="enum" label="30901" values="10|20|30|40|50" default="1" />
    <setting id="ext_info" type="bool" label="30904" default="false" enable="eq(-1,0)"/>
    <setting id="thumb_size" type="enum" label="30902" values="very small|small|medium|large|extra large" default="2" />
    <setting type="sep" />
    <setting id="debug" type="bool" label="30903" default="false" />
  </category>

  <!-- Profile -->
  <category label="30910">
    <setting id="oath_code" type="text" label="30911" enable="false"/>
    <setting id="access_token" type="text" label="30912" enable="false"/>
    <setting type="sep" />
    <setting type="action" label="30913" enable="!eq(-2,) + !eq(-2,'')" option="close" action="RunPlugin(plugin://plugin.audio.mixcloud?mode=profile&key=logout)"/>
  </category>

  <!-- Resolver -->
  <category label="30920">
    <setting id="resolver_mixcloud" type="bool" label="30921" default="true"/>
    <setting id="resolver_mixclouddownloader" type="bool" label="30922" default="true"/>
    <setting id="resolver_offliberty" type="bool" label="30923" default="false"/>
  </category>

  <!-- History -->
  <category label="30930">
    <setting id="play_history_max" type="enum" label="30931" values="100|200|300|400|500" default="0"/>
    <setting id="search_history_max" type="enum" label="30932" values="100|200|300|400|500" default="0"/>
    <setting type="sep" />
    <setting type="action" label="30933" option="close" action="RunPlugin(plugin://plugin.audio.mixcloud?mode=history&key=clear)"/>
  </category>

</settings>
